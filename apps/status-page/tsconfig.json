{
  "extends": "@flarewatch/ts-config/react",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "flarewatch.config.ts",
    "functions/**/*.ts",
    "scripts/**/*.ts"
  ],
  "compilerOptions": {
    "types": ["@cloudflare/workers-types", "node", "vite/client"],
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
